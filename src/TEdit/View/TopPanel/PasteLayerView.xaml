<UserControl x:Class="TEdit.View.PasteLayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:p="clr-namespace:TEdit.Properties"
             mc:Ignorable="d"
             d:Height="120"
             
             Background="{StaticResource WindowBackgroundBrush}" Foreground="{StaticResource TextBrush}">
  <Grid Margin="2">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="50" />
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="50" />
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <!-- Position -->
    <TextBlock Grid.Column="0" Text="X:" VerticalAlignment="Center" Margin="0,0,2,0" />
    <TextBox Grid.Column="1" VerticalAlignment="Center" Margin="0,1"
                 Text="{Binding PasteAnchorX, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Delay=300}" />
    <TextBlock Grid.Column="2" Text="  Y:" VerticalAlignment="Center" Margin="0,0,2,0" />
    <TextBox Grid.Column="3" VerticalAlignment="Center" Margin="0,1"
                 Text="{Binding PasteAnchorY, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Delay=300}" />

    <!-- Separator -->

    <!-- Size (editable) -->
    <TextBlock Grid.Column="0" Grid.Row="1" Text="W:" VerticalAlignment="Center" Margin="0,0,2,0" />
    <TextBox Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" Margin="0,1"
                 Text="{Binding PasteSizeW, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Delay=300}" />
    <TextBlock Grid.Column="2" Grid.Row="1" Text=" H:" VerticalAlignment="Center" Margin="0,0,2,0" />
    <TextBox Grid.Column="3" Grid.Row="1" VerticalAlignment="Center" Margin="0,1"
                 Text="{Binding PasteSizeH, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Delay=300}" />

    <!-- Separator -->

    <!-- Transform buttons -->
    <ui:Button Grid.Column="5" ToolTip="{x:Static p:Language.paste_tooltip_flip_h}" Margin="1" Padding="4,2"
                       HorizontalAlignment="Stretch" Command="{Binding PasteFlipHCommand}">
      <ui:SymbolIcon Symbol="FlipHorizontal20" FontSize="16" />
    </ui:Button>
    <ui:Button Grid.Column="6" ToolTip="{x:Static p:Language.paste_tooltip_flip_v}" Margin="1" Padding="4,2"
                       HorizontalAlignment="Stretch" Command="{Binding PasteFlipVCommand}">
      <ui:SymbolIcon Symbol="FlipVertical20" FontSize="16" />
    </ui:Button>
    <ui:Button Grid.Column="7" ToolTip="{x:Static p:Language.paste_tooltip_rotate_ccw}" Margin="1" Padding="4,2"
                       HorizontalAlignment="Stretch" Command="{Binding PasteRotateCCWCommand}">
      <ui:SymbolIcon Symbol="RotateLeft20" FontSize="14" />
    </ui:Button>
    <ui:Button Grid.Column="8" ToolTip="{x:Static p:Language.paste_tooltip_rotate_cw}" Margin="1" Padding="4,2"
                       HorizontalAlignment="Stretch" Command="{Binding PasteRotateCWCommand}">
      <ui:SymbolIcon Symbol="RotateRight20" FontSize="14" />
    </ui:Button>

    <ui:Button Grid.Column="5" Grid.ColumnSpan="2" Grid.Row="1" ToolTip="{x:Static p:Language.paste_tooltip_accept}" Margin="1" Padding="6,2"
            Appearance="Success" HorizontalAlignment="Stretch"
            Command="{Binding PasteAcceptCommand}">
      <ui:SymbolIcon Symbol="Checkmark20" FontSize="16" />
    </ui:Button>
    <ui:Button Grid.Column="7" Grid.ColumnSpan="2" Grid.Row="1" ToolTip="{x:Static p:Language.paste_tooltip_cancel}" Margin="1" Padding="6,2"
            Appearance="Danger" HorizontalAlignment="Stretch"
            Command="{Binding PasteCancelCommand}">
      <ui:SymbolIcon Symbol="Dismiss20" FontSize="16" />
    </ui:Button>
  </Grid>
</UserControl>
