<UserControl x:Class="TEdit.View.BrushSettingsView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:p="clr-namespace:TEdit.Properties"
             xmlns:enum="clr-namespace:TEdit.UI.Xaml.Enum"
             xmlns:editor="clr-namespace:TEdit.Editor;assembly=TEdit.Editor"
             mc:Ignorable="d"
             Background="{StaticResource WindowBackgroundBrush}" Foreground="{StaticResource TextBrush}">
    <UserControl.Resources>
        <enum:EnumItemList x:Key="BrushShapeEnum" ResourceType="{x:Type p:Language}" EnumType="{x:Type editor:BrushShape}" x:Shared="false" SortBy="Value" />
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>
    <!--
        Layout: single grid, two logical column groups separated by a vertical rule.
        Col 0-3: Size / Shape       Col 5-8: Transform / Spray       Col 4: separator
    -->
    <Grid Margin="2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <!-- 0: labels -->
            <ColumnDefinition Width="28" />
            <!-- 1: textboxes -->
            <ColumnDefinition Width="104" />
            <!-- 2: sliders -->
            <ColumnDefinition Width="Auto" />
            <!-- 3: toggle buttons -->
            <ColumnDefinition Width="Auto" />
            <!-- 4: separator -->
            <ColumnDefinition Width="Auto" />
            <!-- 5: labels -->
            <ColumnDefinition Width="28" />
            <!-- 6: textboxes -->
            <ColumnDefinition Width="104" />
            <!-- 7: sliders -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- ═══ LEFT: Size / Shape ═══ -->

        <!-- Row 0: Width -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="{x:Static p:Language.tool_brush_width_label}"
                   HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,1,4,1" />
        <TextBox   Grid.Row="0" Grid.Column="1" Text="{Binding Brush.Width, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Delay=300}"
                   VerticalAlignment="Center" Margin="0,1" />
        <Slider    Grid.Row="0" Grid.Column="2" Value="{Binding Brush.Width, Mode=TwoWay}"
                   Minimum="{Binding Brush.MinWidth}" Maximum="{Binding Brush.MaxWidth}"
                   SmallChange="1" LargeChange="10" VerticalAlignment="Center"  />
        <ToggleButton Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Padding="0" Margin="16,0,0,0" BorderThickness="1"
                      Width="22" Height="10" 
                      IsChecked="{Binding Brush.IsLocked}"
                      ToolTip="{x:Static p:Language.tool_brush_lock_ratio_tooltip}">
            <ui:SymbolIcon Symbol="LockClosed16" FontSize="8" />
        </ToggleButton>

        <!-- Row 1: Height -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="{x:Static p:Language.tool_brush_height_label}"
                   HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,1,4,1" />
        <TextBox   Grid.Row="1" Grid.Column="1" Text="{Binding Brush.Height, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Delay=300}"
                   VerticalAlignment="Center" Margin="0,1" />
        <Slider    Grid.Row="1" Grid.Column="2" Value="{Binding Brush.Height, Mode=TwoWay}"
                   Minimum="{Binding Brush.MinHeight}" Maximum="{Binding Brush.MaxHeight}"
                   SmallChange="1" LargeChange="10" VerticalAlignment="Center"  />

        <!-- Row 2: Outline -->
        <TextBox   Grid.Row="2" Grid.Column="1" Text="{Binding Brush.Outline, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Delay=300}"
                   VerticalAlignment="Center" Margin="0,1" />
        <Slider    Grid.Row="2" Grid.Column="2" Value="{Binding Brush.Outline, Mode=TwoWay}"
                   Minimum="1" Maximum="{Binding Brush.MaxOutline}"
                   SmallChange="1" LargeChange="10" VerticalAlignment="Center" />
        <ToggleButton Grid.Row="2" Grid.Column="0" Padding="1" Margin="1" BorderThickness="1"
                      VerticalAlignment="Center" 
                      IsChecked="{Binding Brush.IsOutline, Mode=TwoWay}"
                      ToolTip="{x:Static p:Language.tool_brush_outline_tooltip}" >
      <TextBlock Text="Outline" />
    </ToggleButton>

        <!-- Row 3: Shape -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="{x:Static p:Language.tool_brush_shape_label}"
                   HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,1,4,1" />
        <ComboBox  Grid.Row="3" Grid.Column="2" 
                   ItemsSource="{StaticResource BrushShapeEnum}" SelectedValue="{Binding Brush.Shape}"
                   SelectedValuePath="Value" Height="22" Margin="0,1" />

        <!-- ═══ SEPARATOR ═══ -->
        <Rectangle Grid.Column="4" Grid.RowSpan="4" Width="1" Fill="{StaticResource TextBrush}"
                   Opacity="0.3" Margin="4,0" VerticalAlignment="Stretch" />

        <!-- ═══ RIGHT: Transform / Spray ═══ -->

        <!-- Row 0: Rotation -->
        <TextBlock Grid.Row="0" Grid.Column="5" Text="{x:Static p:Language.tool_brush_rotation_label}"
                   HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,1,4,1" />
        <TextBox   Grid.Row="0" Grid.Column="6" Text="{Binding Brush.Rotation, Mode=TwoWay, StringFormat=F0, UpdateSourceTrigger=PropertyChanged, Delay=300}"
                   VerticalAlignment="Center" Margin="0,1" />
        <Slider Grid.Column="7" Value="{Binding Brush.Rotation, Mode=TwoWay}"
                   Minimum="0" Maximum="360" SmallChange="1" LargeChange="45"
                   VerticalAlignment="Center"  />

        <!-- Row 1: Flip + Spray toggle -->
        <TextBlock Grid.Row="1" Grid.Column="5" Text="Flip"
                   HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,1,4,1" />
        <StackPanel Grid.Row="1" Grid.Column="6" Grid.ColumnSpan="2" Orientation="Horizontal"
                    VerticalAlignment="Center" Margin="0,1">
      <ToggleButton IsChecked="{Binding Brush.FlipHorizontal, Mode=TwoWay}"
                          ToolTip="{x:Static p:Language.tool_brush_flip_h_tooltip}"
                          Width="28" Height="24" Padding="0" Margin="0,0,2,0">
        <ui:SymbolIcon Symbol="FlipHorizontal20" FontSize="20" />
      </ToggleButton>
      <ToggleButton IsChecked="{Binding Brush.FlipVertical, Mode=TwoWay}"
                          ToolTip="{x:Static p:Language.tool_brush_flip_v_tooltip}"
                           Width="28" Height="24" Padding="0" >
        <ui:SymbolIcon Symbol="FlipVertical20" FontSize="20" />
      </ToggleButton>
    </StackPanel>
        <ToggleButton Grid.Row="3" Grid.Column="1" Padding="0" Margin="1" BorderThickness="1"
                      Width="26" Height="24" VerticalAlignment="Center"
                      IsChecked="{Binding Brush.IsSpray, Mode=TwoWay}"
                      ToolTip="{x:Static p:Language.tool_brush_spray_tooltip}">
            <ui:SymbolIcon Symbol="SprayCan16" FontSize="20" />
        </ToggleButton>

        <!-- Row 2: Spray Density (conditional) -->
        <TextBlock Grid.Row="2" Grid.Column="5" Text="{x:Static p:Language.tool_brush_spray_density_label}"
                   HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,1,4,1"
                   Visibility="{Binding Brush.IsSpray, Converter={StaticResource BoolToVis}}" />
        <TextBox   Grid.Row="2" Grid.Column="6" Text="{Binding Brush.SprayDensity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Delay=300}"
                   VerticalAlignment="Center" Margin="0,1"
                   Visibility="{Binding Brush.IsSpray, Converter={StaticResource BoolToVis}}" />
        <Slider    Grid.Row="2" Grid.Column="7" Value="{Binding Brush.SprayDensity, Mode=TwoWay}"
                   Minimum="1" Maximum="100" SmallChange="1" LargeChange="10"
                   VerticalAlignment="Center" 
                   Visibility="{Binding Brush.IsSpray, Converter={StaticResource BoolToVis}}" />

        <!-- Row 3: Spray Speed (conditional) -->
        <TextBlock Grid.Row="3" Grid.Column="5" Text="{x:Static p:Language.tool_brush_spray_speed_label}"
                   HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,1,4,1"
                   Visibility="{Binding Brush.IsSpray, Converter={StaticResource BoolToVis}}" />
        <TextBox   Grid.Row="3" Grid.Column="6" Text="{Binding Brush.SprayTickMs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Delay=300}"
                   VerticalAlignment="Center" Margin="0,1"
                   Visibility="{Binding Brush.IsSpray, Converter={StaticResource BoolToVis}}" />
        <Slider    Grid.Row="3" Grid.Column="7" Value="{Binding Brush.SprayTickMs, Mode=TwoWay}"
                   Minimum="10" Maximum="100" SmallChange="5" LargeChange="10"
                   VerticalAlignment="Center" 
                   Visibility="{Binding Brush.IsSpray, Converter={StaticResource BoolToVis}}" />
    </Grid>
</UserControl>
