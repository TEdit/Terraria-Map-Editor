<ui:FluentWindow x:Class="TEdit.View.Popups.InputCaptureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="Press a key or click a mouse button"
        WindowStartupLocation="CenterOwner"
        ExtendsContentIntoTitleBar="True"
        Background="{DynamicResource ControlBackgroundBrush}"
        WindowBackdropType="Mica"
        Icon="/TEdit;component/Images/tedit.ico"
        ResizeMode="NoResize"
        Width="350" Height="150"
        PreviewKeyDown="Window_PreviewKeyDown"
        PreviewMouseDown="Window_PreviewMouseDown"
        PreviewMouseWheel="Window_PreviewMouseWheel">

    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Press a key, mouse button, or scroll wheel..."
                       FontSize="14" Foreground="Snow" TextAlignment="Center" />
            <TextBlock Text="(with optional Ctrl, Shift, or Alt modifiers)"
                       FontSize="11" Foreground="Gray" TextAlignment="Center" Margin="0,4,0,0" />
            <TextBlock x:Name="CapturedText" Text=""
                       FontSize="16" Foreground="LightGreen" FontWeight="Bold"
                       TextAlignment="Center" Margin="0,12,0,0" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
                <Button Content="Cancel" Width="80" Padding="4" Click="Cancel_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</ui:FluentWindow>
