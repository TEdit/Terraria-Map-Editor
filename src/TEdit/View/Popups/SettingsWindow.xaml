<ui:FluentWindow x:Class="TEdit.View.Popups.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:vm="clr-namespace:TEdit.ViewModel"
        xmlns:p="clr-namespace:TEdit.Properties"
        Title="{x:Static p:Language.menu_help_settings}"
        WindowStartupLocation="CenterOwner"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        Icon="/TEdit;component/Images/tedit.ico"
        Width="500" Height="600"
        MinWidth="400" MinHeight="300">

    <ui:FluentWindow.Resources>
        <!-- Template selector for setting editor types -->
        <DataTemplate x:Key="SettingCheckBoxTemplate" DataType="{x:Type vm:SettingItem}">
            <DockPanel Margin="4,3">
                <CheckBox DockPanel.Dock="Right" IsChecked="{Binding Value, Mode=TwoWay}" VerticalAlignment="Center" />
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="{Binding Name}" Foreground="Snow" FontWeight="SemiBold" />
                    <TextBlock Text="{Binding Description}" Foreground="Gray" FontSize="11" TextWrapping="Wrap" />
                </StackPanel>
            </DockPanel>
        </DataTemplate>

        <DataTemplate x:Key="SettingSliderTemplate" DataType="{x:Type vm:SettingItem}">
            <StackPanel Margin="4,3">
                <TextBlock Text="{Binding Name}" Foreground="Snow" FontWeight="SemiBold" />
                <TextBlock Text="{Binding Description}" Foreground="Gray" FontSize="11" TextWrapping="Wrap" />
                <DockPanel Margin="0,4,0,0">
                    <TextBlock DockPanel.Dock="Right" Text="{Binding Value, StringFormat={}{0:0}}" Foreground="Snow"
                               Width="30" TextAlignment="Right" VerticalAlignment="Center" Margin="8,0,0,0" />
                    <Slider Minimum="{Binding SliderMin}" Maximum="{Binding SliderMax}"
                            TickFrequency="{Binding SliderStep}" IsSnapToTickEnabled="True"
                            Value="{Binding Value, Mode=TwoWay}" VerticalAlignment="Center" />
                </DockPanel>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="SettingComboBoxTemplate" DataType="{x:Type vm:SettingItem}">
            <StackPanel Margin="4,3">
                <TextBlock Text="{Binding Name}" Foreground="Snow" FontWeight="SemiBold" />
                <TextBlock Text="{Binding Description}" Foreground="Gray" FontSize="11" TextWrapping="Wrap" />
                <ComboBox ItemsSource="{Binding ComboBoxItems}" SelectedItem="{Binding Value, Mode=TwoWay}"
                          Margin="0,4,0,0" />
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="SettingPathTemplate" DataType="{x:Type vm:SettingItem}">
            <StackPanel Margin="4,3">
                <TextBlock Text="{Binding Name}" Foreground="Snow" FontWeight="SemiBold" />
                <TextBlock Text="{Binding Description}" Foreground="Gray" FontSize="11" TextWrapping="Wrap" />
                <DockPanel Margin="0,4,0,0">
                    <Button DockPanel.Dock="Right" Content="..." Width="30" Margin="4,0,0,0"
                            Click="BrowsePath_Click" Tag="{Binding}" />
                    <Grid>
                        <TextBox x:Name="PathBox" Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" />
                        <TextBlock Text="{Binding Placeholder}" IsHitTestVisible="False" Foreground="Gray"
                                   VerticalAlignment="Center" Margin="6,0,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Value}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Value}" Value="">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </DockPanel>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="SettingKeybindingTemplate" DataType="{x:Type vm:SettingItem}">
            <Grid Margin="4,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Action Name -->
                <TextBlock Grid.Column="0" Text="{Binding Name}" Foreground="Snow"
                           VerticalAlignment="Center" TextTrimming="CharacterEllipsis"
                           ToolTip="{Binding Description}" />

                <!-- Keybindings -->
                <ItemsControl Grid.Column="1" ItemsSource="{Binding Bindings}" VerticalAlignment="Center">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#3A3A3A" CornerRadius="3" Padding="6,2" Margin="0,1,4,1">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding}" Foreground="Snow" VerticalAlignment="Center" FontSize="11" />
                                    <Button Content="x" Padding="2,0" Margin="4,0,0,0" FontSize="10"
                                            Background="Transparent" Foreground="Gray" BorderThickness="0"
                                            Click="RemoveKeybinding_Click"
                                            Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="{x:Static p:Language.settings_keybind_remove_tooltip}" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Add/Reset Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="+" Width="24" Height="22" Padding="0" FontWeight="Bold"
                            Click="AddKeybinding_Click" Tag="{Binding}"
                            ToolTip="{x:Static p:Language.settings_keybind_add_tooltip}" />
                    <Button Content="Reset" Height="22" Padding="6,0" Margin="4,0,0,0" FontSize="10"
                            Click="ResetKeybinding_Click" Tag="{Binding}"
                            ToolTip="{x:Static p:Language.settings_keybind_reset_tooltip}" />
                </StackPanel>
            </Grid>
        </DataTemplate>
    </ui:FluentWindow.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Search Box -->
        <Grid Grid.Row="0" Margin="0,0,0,8">
            <TextBox x:Name="SearchBox" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     Padding="4" VerticalContentAlignment="Center" />
            <TextBlock Text="{x:Static p:Language.settings_search_placeholder}" IsHitTestVisible="False" Foreground="Gray"
                       VerticalAlignment="Center" Margin="6,0,0,0">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Visible" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Text, ElementName=SearchBox, Converter={x:Static vm:StringNotEmptyConverter.Instance}}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>

        <!-- Settings List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding SettingsView}">
                <ItemsControl.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.ContainerStyle>
                            <Style TargetType="{x:Type GroupItem}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type GroupItem}">
                                            <Expander Margin="0,4,0,0"
                                                      Expanded="CategoryExpander_Expanded"
                                                      Collapsed="CategoryExpander_Collapsed">
                                                <Expander.IsExpanded>
                                                    <MultiBinding Converter="{x:Static vm:CategoryExpandedConverter.Instance}" Mode="OneWay">
                                                        <Binding Path="Name" Mode="OneWay" />
                                                        <Binding RelativeSource="{RelativeSource AncestorType=Window}" Path="DataContext" Mode="OneWay" />
                                                    </MultiBinding>
                                                </Expander.IsExpanded>
                                                <Expander.Header>
                                                    <TextBlock Text="{Binding Name}"
                                                               FontSize="14" FontWeight="Bold"
                                                               Foreground="{DynamicResource TextBrush}" />
                                                </Expander.Header>
                                                <!-- Darker background for settings items -->
                                                <Border Background="#1A1A1A"
                                                        CornerRadius="4"
                                                        Margin="0,4,0,8"
                                                        Padding="4">
                                                    <ItemsPresenter />
                                                </Border>
                                            </Expander>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </GroupStyle.ContainerStyle>
                    </GroupStyle>
                </ItemsControl.GroupStyle>
                <ItemsControl.ItemTemplateSelector>
                    <vm:SettingEditorTemplateSelector
                        SettingCheckBoxTemplate="{StaticResource SettingCheckBoxTemplate}"
                        SettingSliderTemplate="{StaticResource SettingSliderTemplate}"
                        SettingComboBoxTemplate="{StaticResource SettingComboBoxTemplate}"
                        SettingPathTemplate="{StaticResource SettingPathTemplate}"
                        SettingKeybindingTemplate="{StaticResource SettingKeybindingTemplate}" />
                </ItemsControl.ItemTemplateSelector>
            </ItemsControl>
        </ScrollViewer>

        <!-- Save/Cancel Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="{x:Static p:Language.settings_cancel}" Width="80" Padding="4" Margin="0,0,8,0" Click="Cancel_Click" />
            <Button Content="{x:Static p:Language.settings_save}" Width="80" Padding="4" Click="Save_Click" />
        </StackPanel>
    </Grid>
</ui:FluentWindow>
