<ui:FluentWindow x:Class="TEdit.View.Popups.WorldExplorerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:TEdit.ViewModel"
    xmlns:p="clr-namespace:TEdit.Properties"
    Title="{x:Static p:Language.world_explorer_title}"
    WindowStartupLocation="CenterOwner"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica"
    Icon="/TEdit;component/Images/tedit.ico"
    Width="850" Height="550"
    MinWidth="600" MinHeight="350">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Search + Browse Row -->
        <DockPanel Grid.Row="0" Margin="0,0,0,8">
            <Button DockPanel.Dock="Right" Content="Browse..." Padding="8,4" Margin="8,0,0,0"
                    Click="Browse_Click" />
            <Grid>
                <TextBox x:Name="SearchBox" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Padding="4" VerticalContentAlignment="Center" />
                <TextBlock Text="Search worlds..." IsHitTestVisible="False" Foreground="Gray"
                           VerticalAlignment="Center" Margin="6,0,0,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=SearchBox, Converter={x:Static vm:StringNotEmptyConverter.Instance}}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </DockPanel>

        <!-- Tab Control -->
        <TabControl Grid.Row="1" SelectedIndex="{Binding SelectedTabIndex}">
            <!-- Tab 1: Worlds -->
            <TabItem Header="{x:Static p:Language.world_explorer_tab_worlds}">
                <ListView ItemsSource="{Binding FilteredWorlds}"
                          SelectedItem="{Binding SelectedWorld}"
                          MouseDoubleClick="WorldList_MouseDoubleClick"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="" Width="30">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding IsPinned, Converter={x:Static vm:PinIconConverter.Instance}}"
                                                Click="TogglePin_Click" Tag="{Binding}"
                                                Background="Transparent" BorderThickness="0"
                                                Padding="2" FontSize="14" Cursor="Hand" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Title" Width="160">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Title}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsMissing}" Value="True">
                                                            <Setter Property="Foreground" Value="Gray" />
                                                            <Setter Property="TextDecorations" Value="Strikethrough" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="File" Width="120"
                                            DisplayMemberBinding="{Binding FileName}" />
                            <GridViewColumn Header="Dimensions" Width="130"
                                            DisplayMemberBinding="{Binding DimensionText}" />
                            <GridViewColumn Header="Version" Width="80"
                                            DisplayMemberBinding="{Binding VersionText}" />
                            <GridViewColumn Header="Size" Width="70"
                                            DisplayMemberBinding="{Binding SizeText}" />
                            <GridViewColumn Header="Modified" Width="90"
                                            DisplayMemberBinding="{Binding LastModifiedText}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>

            <!-- Tab 2: Backups & Autosaves -->
            <TabItem Header="{x:Static p:Language.world_explorer_tab_backups}">
                <TreeView ItemsSource="{Binding FilteredBackupGroups}"
                          SelectedItemChanged="BackupTree_SelectedItemChanged">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate DataType="{x:Type vm:BackupWorldGroupViewModel}"
                                                  ItemsSource="{Binding Entries}">
                            <TextBlock Text="{Binding HeaderText}" FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}" />
                            <HierarchicalDataTemplate.ItemTemplate>
                                <DataTemplate DataType="{x:Type vm:BackupEntryViewModel}">
                                    <TextBlock Text="{Binding DisplayText}" Margin="4,2"
                                               Foreground="{DynamicResource TextBrush}"
                                               MouseDown="BackupEntry_MouseDoubleClick" />
                                </DataTemplate>
                            </HierarchicalDataTemplate.ItemTemplate>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                    <TreeView.Resources>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Converter={x:Static vm:IsTypeConverter.BackupWorldGroup}}" Value="True">
                                    <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TreeView.Resources>
                </TreeView>
            </TabItem>
        </TabControl>

        <!-- Button Bar -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="{x:Static p:Language.world_explorer_open}" Width="80" Padding="4"
                    Margin="0,0,8,0" Click="Open_Click" />
            <Button Content="{x:Static p:Language.world_explorer_delete}" Width="80" Padding="4"
                    Margin="0,0,8,0" Click="Delete_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedTabIndex}" Value="1">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Refresh" Width="80" Padding="4" Margin="0,0,8,0" Click="Refresh_Click" />
            <Button Content="Close" Width="80" Padding="4" Click="Close_Click" />
        </StackPanel>
    </Grid>
</ui:FluentWindow>
