<UserControl x:Class="TEdit.View.Sponsor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:TEdit.View"
             xmlns:p="clr-namespace:TEdit.Properties"
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="140">
    <StackPanel>
        <TextBlock HorizontalAlignment="Center" Margin="2" Text="{x:Static p:Language.global_enjoytedit}" FontSize="12" />
        <Button HorizontalAlignment="Stretch" Margin="0,1" Click="PatreonButtonClick" Padding="6,5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Viewbox Width="16" Height="16" Stretch="Uniform" Margin="0,0,6,0">
                    <Path Data="{StaticResource PatreonIconGeometry}" Fill="#FF424D" Stretch="Uniform" />
                </Viewbox>
                <TextBlock Text="PATREON" FontWeight="Bold" FontSize="13" VerticalAlignment="Center" />
            </StackPanel>
        </Button>
        <Button HorizontalAlignment="Stretch" Margin="0,1" Click="DiscordButtonClick" Padding="4,2">
            <StackPanel Orientation="Horizontal">
                <Viewbox Width="12" Height="12" Stretch="Uniform" Margin="0,0,4,0">
                    <Path Data="{StaticResource DiscordIconGeometry}" Fill="{DynamicResource TextFillColorPrimaryBrush}" Stretch="Uniform" />
                </Viewbox>
                <TextBlock Text="Discord" FontSize="11" VerticalAlignment="Center" />
            </StackPanel>
        </Button>
        <Button HorizontalAlignment="Stretch" Margin="0,1" Click="GithubButtonClick" Padding="4,2">
            <StackPanel Orientation="Horizontal">
                <Viewbox Width="12" Height="12" Stretch="Uniform" Margin="0,0,4,0">
                    <Path Data="{StaticResource GitHubIconGeometry}" Fill="{DynamicResource TextFillColorPrimaryBrush}" Stretch="Uniform" />
                </Viewbox>
                <TextBlock Text="GitHub" FontSize="11" VerticalAlignment="Center" />
            </StackPanel>
        </Button>
    </StackPanel>
</UserControl>
