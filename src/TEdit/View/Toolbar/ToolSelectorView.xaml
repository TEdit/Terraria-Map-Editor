<UserControl x:Class="TEdit.View.ToolSelectorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:tedit="clr-namespace:TEdit.UI.Xaml"
             mc:Ignorable="d"
             xmlns:p="clr-namespace:TEdit.Properties"
             d:DesignHeight="200" d:DesignWidth="34">
    <UserControl.Resources>
        <DataTemplate x:Key="toolBarItemTemplate">
            <tedit:ToggleButtonDataBound Margin="1" Height="32" Width="32" FocusVisualStyle="{x:Null}"
                                      Command="{Binding DataContext.SetToolCommand, Mode=Default, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                      CommandParameter="{Binding}" IsChecked="{Binding IsActive}" >
                <tedit:ToggleButtonDataBound.ToolTip>
                    <TextBlock Text="{Binding ToolTipText}" FocusVisualStyle="{x:Null}"/>
                </tedit:ToggleButtonDataBound.ToolTip>
                <Grid>
                    <!-- Priority 1: Vector Icon (DrawingImage from resources) -->
                    <Image Source="{Binding VectorIcon}" Stretch="Uniform" FocusVisualStyle="{x:Null}"
                           VerticalAlignment="Center" HorizontalAlignment="Center" Height="20" Width="20">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding VectorIcon}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                    <!-- Priority 2: Fluent Symbol Icon (when VectorIcon is null and SymbolIcon is not Empty) -->
                    <ui:SymbolIcon Symbol="{Binding SymbolIcon}" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <ui:SymbolIcon.Style>
                            <Style TargetType="ui:SymbolIcon">
                                <!-- Default: Collapsed, show only via MultiDataTrigger -->
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <!-- Show when VectorIcon is null (SymbolIcon not Empty is handled by having Empty render as nothing) -->
                                    <DataTrigger Binding="{Binding VectorIcon}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <!-- But hide when SymbolIcon is Empty -->
                                    <DataTrigger Binding="{Binding SymbolIcon}" Value="Empty">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ui:SymbolIcon.Style>
                    </ui:SymbolIcon>
                    <!-- Priority 3: PNG Image Icon (fallback when both VectorIcon is null and SymbolIcon is Empty) -->
                    <Image Source="{Binding Icon}" Stretch="None" FocusVisualStyle="{x:Null}"
                           VerticalAlignment="Center" HorizontalAlignment="Center" Height="20" Width="20">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding VectorIcon}" Value="{x:Null}"/>
                                            <Condition Binding="{Binding SymbolIcon}" Value="Empty"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </Grid>
            </tedit:ToggleButtonDataBound>
        </DataTemplate>
    </UserControl.Resources>
    <ItemsControl ItemsSource="{Binding Tools}" ItemTemplate="{StaticResource toolBarItemTemplate}" >
    </ItemsControl>
</UserControl>
