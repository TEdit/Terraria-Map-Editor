<UserControl x:Class="TEdit.View.Sidebar.PlayerEditor.PlayerBanksView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:p="clr-namespace:TEdit.Properties"
    xmlns:converters="clr-namespace:TEdit.Converters"
    xmlns:controls="clr-namespace:TEdit.View.Sidebar.Controls"
    mc:Ignorable="d" d:DesignWidth="320">
    <UserControl.Resources>
        <converters:ItemIdToPreviewConverter x:Key="ItemIdToPreviewConverter" />
        <DataTemplate x:Key="FastBankItem">
            <Grid HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="26" />
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="75" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0"
                       Source="{Binding NetId, Converter={StaticResource ItemIdToPreviewConverter}}"
                       Width="24" Height="24" Stretch="Uniform"
                       RenderOptions.BitmapScalingMode="NearestNeighbor" />
                <TextBlock Grid.Column="1" Foreground="White" Text="{Binding StackSize}" Margin="2" TextAlignment="Right" />
                <TextBlock Grid.Column="2" Foreground="White" Text="{Binding PrefixName}" Margin="2" />
                <TextBlock Grid.Column="3" Foreground="White" Text="{Binding Name}" Margin="2" TextTrimming="CharacterEllipsis" />
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <TabControl>
        <!-- Piggy Bank -->
        <TabItem Header="{x:Static p:Language.player_editor_bank_piggy}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ListBox Name="Bank1List" Padding="5" Foreground="White" MinHeight="200"
                    ItemsSource="{Binding Player.Bank1}"
                    SelectionMode="Extended"
                    ScrollViewer.CanContentScroll="True"
                    VirtualizingStackPanel.IsVirtualizing="True"
                    HorizontalContentAlignment="Stretch"
                    ItemTemplate="{StaticResource FastBankItem}">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
                <controls:ItemEditorControl Grid.Row="1"
                    DataContext="{Binding ElementName=Bank1List, Path=SelectedItem}"
                    ItemId="{Binding NetId, Mode=TwoWay}"
                    StackSize="{Binding StackSize, Mode=TwoWay}"
                    Prefix="{Binding Prefix, Mode=TwoWay}"
                    ItemsSource="{Binding Source={StaticResource ItemsCollection}}"
                    ItemsSourceType="ItemPropertyList"
                    PrefixSource="{Binding Source={StaticResource PrefixCollection}}"/>
            </Grid>
        </TabItem>

        <!-- Safe -->
        <TabItem Header="{x:Static p:Language.player_editor_bank_safe}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ListBox Name="Bank2List" Padding="5" Foreground="White" MinHeight="200"
                    ItemsSource="{Binding Player.Bank2}"
                    SelectionMode="Extended"
                    ScrollViewer.CanContentScroll="True"
                    VirtualizingStackPanel.IsVirtualizing="True"
                    HorizontalContentAlignment="Stretch"
                    ItemTemplate="{StaticResource FastBankItem}">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
                <controls:ItemEditorControl Grid.Row="1"
                    DataContext="{Binding ElementName=Bank2List, Path=SelectedItem}"
                    ItemId="{Binding NetId, Mode=TwoWay}"
                    StackSize="{Binding StackSize, Mode=TwoWay}"
                    Prefix="{Binding Prefix, Mode=TwoWay}"
                    ItemsSource="{Binding Source={StaticResource ItemsCollection}}"
                    ItemsSourceType="ItemPropertyList"
                    PrefixSource="{Binding Source={StaticResource PrefixCollection}}"/>
            </Grid>
        </TabItem>

        <!-- Defender's Forge -->
        <TabItem Header="{x:Static p:Language.player_editor_bank_defender}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ListBox Name="Bank3List" Padding="5" Foreground="White" MinHeight="200"
                    ItemsSource="{Binding Player.Bank3}"
                    SelectionMode="Extended"
                    ScrollViewer.CanContentScroll="True"
                    VirtualizingStackPanel.IsVirtualizing="True"
                    HorizontalContentAlignment="Stretch"
                    ItemTemplate="{StaticResource FastBankItem}">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
                <controls:ItemEditorControl Grid.Row="1"
                    DataContext="{Binding ElementName=Bank3List, Path=SelectedItem}"
                    ItemId="{Binding NetId, Mode=TwoWay}"
                    StackSize="{Binding StackSize, Mode=TwoWay}"
                    Prefix="{Binding Prefix, Mode=TwoWay}"
                    ItemsSource="{Binding Source={StaticResource ItemsCollection}}"
                    ItemsSourceType="ItemPropertyList"
                    PrefixSource="{Binding Source={StaticResource PrefixCollection}}"/>
            </Grid>
        </TabItem>

        <!-- Void Vault -->
        <TabItem Header="{x:Static p:Language.player_editor_bank_void}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ListBox Name="Bank4List" Padding="5" Foreground="White" MinHeight="200"
                    ItemsSource="{Binding Player.Bank4}"
                    SelectionMode="Extended"
                    ScrollViewer.CanContentScroll="True"
                    VirtualizingStackPanel.IsVirtualizing="True"
                    HorizontalContentAlignment="Stretch"
                    ItemTemplate="{StaticResource FastBankItem}">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
                <controls:ItemEditorControl Grid.Row="1"
                    DataContext="{Binding ElementName=Bank4List, Path=SelectedItem}"
                    ItemId="{Binding NetId, Mode=TwoWay}"
                    StackSize="{Binding StackSize, Mode=TwoWay}"
                    Prefix="{Binding Prefix, Mode=TwoWay}"
                    ItemsSource="{Binding Source={StaticResource ItemsCollection}}"
                    ItemsSourceType="ItemPropertyList"
                    PrefixSource="{Binding Source={StaticResource PrefixCollection}}"/>
            </Grid>
        </TabItem>
    </TabControl>
</UserControl>
