<UserControl x:Class="TEdit.View.Sidebar.PlayerEditor.PlayerBuffsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:p="clr-namespace:TEdit.Properties"
    mc:Ignorable="d" d:DesignWidth="320">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListBox Name="BuffList" Padding="5" Foreground="White" MinHeight="200"
            ItemsSource="{Binding Player.Buffs}"
            SelectionMode="Single"
            ScrollViewer.CanContentScroll="True"
            VirtualizingStackPanel.IsVirtualizing="True"
            HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="22"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding Type}" Foreground="White" Margin="2" TextAlignment="Right"/>
                        <TextBlock Grid.Column="1" Text="{Binding Type, StringFormat='Buff #{0}'}" Foreground="White" Margin="2"/>
                        <TextBlock Grid.Column="2" Text="{Binding Time}" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="2" TextAlignment="Right"/>
                        <Button Grid.Column="3" Style="{StaticResource CompactIconButton}" ToolTip="Clear"
                                Click="ClearBuff_Click" Tag="{Binding}">
                            <ui:SymbolIcon Symbol="Dismiss20" FontSize="12"/>
                        </Button>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <!-- Selected buff editor -->
        <StackPanel Grid.Row="1" DataContext="{Binding ElementName=BuffList, Path=SelectedItem}">
            <TextBlock Text="Edit Selected Buff" Margin="2" Foreground="{DynamicResource TextBrush}" FontWeight="Bold"/>
            <Grid Margin="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Type:" Foreground="{DynamicResource TextBrush}" VerticalAlignment="Center" Margin="0,0,4,0"/>
                <ui:NumberBox Grid.Column="1" Value="{Binding Type}" Minimum="0" Maximum="400"
                              SpinButtonPlacementMode="Compact" Height="28"/>
                <TextBlock Grid.Column="2" Text="Time:" Foreground="{DynamicResource TextBrush}"
                           VerticalAlignment="Center" Margin="8,0,4,0"/>
                <ui:NumberBox Grid.Column="3" Value="{Binding Time}" Minimum="0"
                              SpinButtonPlacementMode="Compact" Height="28"/>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
