<UserControl x:Class="TEdit.View.Sidebar.PlayerEditor.PlayerInventoryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:p="clr-namespace:TEdit.Properties"
    xmlns:converters="clr-namespace:TEdit.Converters"
    xmlns:controls="clr-namespace:TEdit.View.Sidebar.Controls"
    mc:Ignorable="d" d:DesignWidth="320">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../SpecialTilesViews/SpecialTilesSharedResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate x:Key="FastInventoryItem">
            <Grid HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="26" />
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="75" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="22" />
                    <ColumnDefinition Width="22" />
                    <ColumnDefinition Width="22" />
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0"
                       Source="{Binding NetId, Converter={StaticResource ItemIdToPreviewConverter}}"
                       Width="24" Height="24" Stretch="Uniform"
                       RenderOptions.BitmapScalingMode="NearestNeighbor" />
                <TextBlock Grid.Column="1" Foreground="White" Text="{Binding StackSize}" Margin="2" TextAlignment="Right" />
                <TextBlock Grid.Column="2" Foreground="White" Text="{Binding PrefixName}" Margin="2" />
                <TextBlock Grid.Column="3" Foreground="White" Text="{Binding Name}" Margin="2" TextTrimming="CharacterEllipsis" />
                <Button Grid.Column="4" Style="{StaticResource CompactIconButton}" ToolTip="{x:Static p:Language.menu_edit_copy}"
                        Command="{Binding DataContext.CopyPlayerItemCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" CommandParameter="{Binding}">
                    <ui:SymbolIcon Symbol="Copy20" FontSize="14"/>
                </Button>
                <Button Grid.Column="5" Style="{StaticResource CompactIconButton}" ToolTip="{x:Static p:Language.menu_edit_paste}"
                        Command="{Binding DataContext.PastePlayerItemCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" CommandParameter="{Binding SelectedItems, ElementName=InventoryList}">
                    <ui:SymbolIcon Symbol="ClipboardPaste20" FontSize="14"/>
                </Button>
                <Button Grid.Column="6" Style="{StaticResource CompactIconButton}" ToolTip="{x:Static p:Language.chest_max_stack}"
                        Command="{Binding DataContext.PlayerItemSetToMaxStackCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" CommandParameter="{Binding SelectedItems, ElementName=InventoryList}">
                    <ui:SymbolIcon Symbol="ArrowMaximize20" FontSize="14"/>
                </Button>
            </Grid>
        </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Inventory list -->
        <ListBox Name="InventoryList" Grid.Row="0" Padding="5" Foreground="White" MinHeight="200"
            ItemsSource="{Binding Player.Inventory}"
            SelectionMode="Extended"
            ScrollViewer.CanContentScroll="True"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            VirtualizingStackPanel.IsVirtualizing="True"
            HorizontalContentAlignment="Stretch"
            ItemTemplate="{StaticResource FastInventoryItem}">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <!-- Selected item editor -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="Edit Selected Item" Margin="2" Foreground="{DynamicResource TextBrush}" FontWeight="Bold"/>
            <controls:ItemEditorControl
                DataContext="{Binding ElementName=InventoryList, Path=SelectedItem}"
                ItemId="{Binding NetId, Mode=TwoWay}"
                StackSize="{Binding StackSize, Mode=TwoWay}"
                Prefix="{Binding Prefix, Mode=TwoWay}"
                ItemsSource="{Binding Source={StaticResource ItemsCollection}}"
                ItemsSourceType="ItemPropertyList"
                PrefixSource="{Binding Source={StaticResource PrefixCollection}}"/>
        </StackPanel>
    </Grid>
</UserControl>
