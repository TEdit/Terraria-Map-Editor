<UserControl x:Class="TEdit.View.Sidebar.PlayerEditor.PlayerStatsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:p="clr-namespace:TEdit.Properties"
    mc:Ignorable="d" d:DesignWidth="320">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="2">
            <!-- Health -->
            <TextBlock Text="{x:Static p:Language.player_stats_health}" Foreground="{DynamicResource TextBrush}" FontWeight="Bold" Margin="0,0,0,2"/>
            <Grid Margin="0,0,0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{x:Static p:Language.player_stats_hp}" Foreground="{DynamicResource TextBrush}" VerticalAlignment="Center" Margin="0,0,4,0"/>
                <ui:NumberBox Grid.Column="1" Value="{Binding Player.StatLife}" Minimum="1" Maximum="999"
                              SpinButtonPlacementMode="Compact" Height="28"/>
                <TextBlock Grid.Column="2" Text="{x:Static p:Language.player_stats_max}" Foreground="{DynamicResource TextBrush}"
                           VerticalAlignment="Center" Margin="8,0,4,0"/>
                <ui:NumberBox Grid.Column="3" Value="{Binding Player.StatLifeMax}" Minimum="1" Maximum="999"
                              SpinButtonPlacementMode="Compact" Height="28"/>
            </Grid>

            <!-- Mana -->
            <TextBlock Text="{x:Static p:Language.player_stats_mana}" Foreground="{DynamicResource TextBrush}" FontWeight="Bold" Margin="0,0,0,2"/>
            <Grid Margin="0,0,0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{x:Static p:Language.player_stats_mp}" Foreground="{DynamicResource TextBrush}" VerticalAlignment="Center" Margin="0,0,4,0"/>
                <ui:NumberBox Grid.Column="1" Value="{Binding Player.StatMana}" Minimum="0" Maximum="999"
                              SpinButtonPlacementMode="Compact" Height="28"/>
                <TextBlock Grid.Column="2" Text="{x:Static p:Language.player_stats_max}" Foreground="{DynamicResource TextBrush}"
                           VerticalAlignment="Center" Margin="8,0,4,0"/>
                <ui:NumberBox Grid.Column="3" Value="{Binding Player.StatManaMax}" Minimum="0" Maximum="999"
                              SpinButtonPlacementMode="Compact" Height="28"/>
            </Grid>

            <!-- Team -->
            <Grid Margin="0,0,0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{x:Static p:Language.player_stats_team}" Foreground="{DynamicResource TextBrush}" FontWeight="Bold"
                           VerticalAlignment="Center" Margin="0,0,4,0"/>
                <ComboBox Grid.Column="1" Height="26" SelectedIndex="{Binding Player.Team}">
                    <ComboBoxItem Content="{x:Static p:Language.player_stats_team_none}"/>
                    <ComboBoxItem Content="{x:Static p:Language.player_stats_team_red}"/>
                    <ComboBoxItem Content="{x:Static p:Language.player_stats_team_green}"/>
                    <ComboBoxItem Content="{x:Static p:Language.player_stats_team_blue}"/>
                    <ComboBoxItem Content="{x:Static p:Language.player_stats_team_yellow}"/>
                    <ComboBoxItem Content="{x:Static p:Language.player_stats_team_pink}"/>
                </ComboBox>
            </Grid>

            <!-- Flags -->
            <TextBlock Text="{x:Static p:Language.player_stats_flags}" Foreground="{DynamicResource TextBrush}" FontWeight="Bold" Margin="0,4,0,2"/>
            <WrapPanel>
                <CheckBox Content="{x:Static p:Language.player_stats_extra_accessory}" IsChecked="{Binding Player.ExtraAccessory}" Margin="0,2,8,2"/>
                <CheckBox Content="{x:Static p:Language.player_stats_biome_torches_unlocked}" IsChecked="{Binding Player.UnlockedBiomeTorches}" Margin="0,2,8,2"/>
                <CheckBox Content="{x:Static p:Language.player_stats_using_biome_torches}" IsChecked="{Binding Player.UsingBiomeTorches}" Margin="0,2,8,2"/>
                <CheckBox Content="{x:Static p:Language.player_stats_ate_artisan_bread}" IsChecked="{Binding Player.AteArtisanBread}" Margin="0,2,8,2"/>
                <CheckBox Content="{x:Static p:Language.player_stats_used_aegis_crystal}" IsChecked="{Binding Player.UsedAegisCrystal}" Margin="0,2,8,2"/>
                <CheckBox Content="{x:Static p:Language.player_stats_used_aegis_fruit}" IsChecked="{Binding Player.UsedAegisFruit}" Margin="0,2,8,2"/>
                <CheckBox Content="{x:Static p:Language.player_stats_used_arcane_crystal}" IsChecked="{Binding Player.UsedArcaneCrystal}" Margin="0,2,8,2"/>
                <CheckBox Content="{x:Static p:Language.player_stats_used_galaxy_pearl}" IsChecked="{Binding Player.UsedGalaxyPearl}" Margin="0,2,8,2"/>
                <CheckBox Content="{x:Static p:Language.player_stats_used_gummy_worm}" IsChecked="{Binding Player.UsedGummyWorm}" Margin="0,2,8,2"/>
                <CheckBox Content="{x:Static p:Language.player_stats_used_ambrosia}" IsChecked="{Binding Player.UsedAmbrosia}" Margin="0,2,8,2"/>
                <CheckBox Content="{x:Static p:Language.player_stats_super_cart_unlocked}" IsChecked="{Binding Player.UnlockedSuperCart}" Margin="0,2,8,2"/>
                <CheckBox Content="{x:Static p:Language.player_stats_super_cart_enabled}" IsChecked="{Binding Player.EnabledSuperCart}" Margin="0,2,8,2"/>
            </WrapPanel>

            <!-- Numeric stats -->
            <TextBlock Text="{x:Static p:Language.player_stats_statistics}" Foreground="{DynamicResource TextBrush}" FontWeight="Bold" Margin="0,4,0,2"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="{x:Static p:Language.player_stats_tax_money}" Foreground="{DynamicResource TextBrush}" VerticalAlignment="Center" Margin="0,2,4,2"/>
                <ui:NumberBox Grid.Column="1" Value="{Binding Player.TaxMoney}" Minimum="0"
                              SpinButtonPlacementMode="Compact" Height="28" Margin="0,2"/>
                <TextBlock Grid.Row="1" Text="{x:Static p:Language.player_stats_deaths_pve}" Foreground="{DynamicResource TextBrush}" VerticalAlignment="Center" Margin="0,2,4,2"/>
                <ui:NumberBox Grid.Row="1" Grid.Column="1" Value="{Binding Player.NumberOfDeathsPVE}" Minimum="0"
                              SpinButtonPlacementMode="Compact" Height="28" Margin="0,2"/>
                <TextBlock Grid.Row="2" Text="{x:Static p:Language.player_stats_deaths_pvp}" Foreground="{DynamicResource TextBrush}" VerticalAlignment="Center" Margin="0,2,4,2"/>
                <ui:NumberBox Grid.Row="2" Grid.Column="1" Value="{Binding Player.NumberOfDeathsPVP}" Minimum="0"
                              SpinButtonPlacementMode="Compact" Height="28" Margin="0,2"/>
                <TextBlock Grid.Row="3" Text="{x:Static p:Language.player_stats_angler_quests}" Foreground="{DynamicResource TextBrush}" VerticalAlignment="Center" Margin="0,2,4,2"/>
                <ui:NumberBox Grid.Row="3" Grid.Column="1" Value="{Binding Player.AnglerQuestsFinished}" Minimum="0"
                              SpinButtonPlacementMode="Compact" Height="28" Margin="0,2"/>
                <TextBlock Grid.Row="4" Text="{x:Static p:Language.player_stats_golfer_score}" Foreground="{DynamicResource TextBrush}" VerticalAlignment="Center" Margin="0,2,4,2"/>
                <ui:NumberBox Grid.Row="4" Grid.Column="1" Value="{Binding Player.GolferScoreAccumulated}" Minimum="0"
                              SpinButtonPlacementMode="Compact" Height="28" Margin="0,2"/>
            </Grid>

            <!-- Spawn Points -->
            <TextBlock Text="{x:Static p:Language.player_stats_spawn_points}" Foreground="{DynamicResource TextBrush}" FontWeight="Bold" Margin="0,4,0,2"/>
            <ItemsControl ItemsSource="{Binding Player.SpawnPoints}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontSize="11" Margin="2,1">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0}: ({1}, {2})">
                                    <Binding Path="WorldName"/>
                                    <Binding Path="X"/>
                                    <Binding Path="Y"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</UserControl>
