        <TextBlock />
        <CheckBox IsChecked="{Binding CurrentWorld.BloodMoon}" Content="{x:Static p:Language.tool_wp_moon_blood}" VerticalAlignment="Center" VerticalContentAlignment="Center" />
        <TextBlock />
        <CheckBox IsChecked="{Binding CurrentWorld.IsEclipse}" Content="{x:Static p:Language.tool_wp_moon_eclipse}" VerticalAlignment="Center" VerticalContentAlignment="Center" />
        <Separator Grid.ColumnSpan="2" />
        <TextBlock Text="{x:Static p:Language.tool_wp_time_label}" HorizontalAlignment="Right" />
