    <tedit:AutoGrid HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="2">
        <tedit:AutoGrid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1.6*" />
        </tedit:AutoGrid.ColumnDefinitions>
        <TextBlock Text="{x:Static p:Language.tool_wp_name}" HorizontalAlignment="Right" />
        <TextBox Text="{Binding CurrentWorld.Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <TextBlock Text="{x:Static p:Language.tool_wp_id}" HorizontalAlignment="Right" />
        <TextBox Text="{Binding CurrentWorld.WorldId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  />
        <TextBlock Text="{x:Static p:Language.tool_wp_guid}" HorizontalAlignment="Right" />
        <TextBox Text="{Binding CurrentWorld.WorldGUID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  />
        <TextBlock Text="{x:Static p:Language.tool_wp_revision}" HorizontalAlignment="Right" />
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding CurrentWorld.FileRevision}" HorizontalAlignment="Left" />
            <TextBlock Text="v" HorizontalAlignment="Left" Margin="10 0 0 0" />
            <TextBlock Text="{Binding CurrentWorld.WorldVersion}" HorizontalAlignment="Left" />
        </StackPanel>
        <TextBlock Text="{x:Static p:Language.tool_wp_seed}" HorizontalAlignment="Right" />
        <TextBox Text="{Binding CurrentWorld.Seed}" HorizontalAlignment="Stretch" IsReadOnly="true" />
        <TextBlock />
