<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:converters="clr-namespace:TEdit.Converters"
    xmlns:p="clr-namespace:TEdit.Properties">

    <ui:SymbolIcon x:Key="TB_CopyIcon" x:Shared="false" Symbol="Copy20" FontSize="16"/>
    <ui:SymbolIcon x:Key="TB_PasteIcon" x:Shared="false" Symbol="ClipboardPaste20" FontSize="16"/>
    <ui:SymbolIcon x:Key="TB_MaxStackIcon" x:Shared="false" Symbol="ArrowMaximize20" FontSize="16"/>
    <converters:ShortIntConverter x:Key="ShortIntConverter" />
    <converters:FirstOrNullConverter x:Key="FirstOrNullConverter" />
    <converters:ItemIdToPreviewConverter x:Key="ItemIdToPreviewConverter" />
    <ItemsPanelTemplate x:Key="Template_ComboPanel">
        <VirtualizingStackPanel VirtualizingStackPanel.IsVirtualizing="True"
                                VirtualizingStackPanel.VirtualizationMode="Recycling" />
    </ItemsPanelTemplate>
    <!-- ComboBoxItem style that shows TemplateBinding Background (for rarity coloring) -->
    <Style x:Key="RarityComboBoxItem" TargetType="{x:Type ComboBoxItem}" BasedOn="{StaticResource {x:Type ComboBoxItem}}">
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Padding" Value="{DynamicResource ComboBoxItemContentMargin}"/>
        <Setter Property="Foreground" Value="{DynamicResource ComboBoxForeground}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Border.CornerRadius" Value="{DynamicResource ControlCornerRadius}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ComboBoxItem}">
                    <Grid Background="Transparent">
                        <Border Name="ContentBorder"
                                Margin="{DynamicResource ComboBoxItemMargin}"
                                Padding="0"
                                Background="{TemplateBinding Background}"
                                VerticalAlignment="Stretch"
                                CornerRadius="{TemplateBinding Border.CornerRadius}"
                                SnapsToDevicePixels="True">
                            <Grid>
                                <ContentPresenter x:Name="PART_ContentPresenter"
                                                  Margin="{TemplateBinding Padding}"
                                                  VerticalAlignment="Center"/>
                                <Rectangle x:Name="ActiveRectangle" Width="3" Height="16"
                                           HorizontalAlignment="Left" VerticalAlignment="Center"
                                           Fill="{DynamicResource ComboBoxItemPillFillBrush}"
                                           RadiusX="2" RadiusY="2" Visibility="Collapsed"/>
                            </Grid>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsHighlighted" Value="True">
                            <Setter TargetName="ContentBorder" Property="Background" Value="{DynamicResource ComboBoxItemBackgroundSelected}"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="ActiveRectangle" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="PART_ContentPresenter" Property="TextElement.Foreground" Value="{DynamicResource ComboBoxItemForegroundSelected}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{DynamicResource ComboBoxForegroundDisabled}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Rarity-tinted item template for category dictionaries (KeyValuePair<int, ItemProperty>) -->
    <DataTemplate x:Key="RarityDictItemTemplate">
        <Grid Margin="-2,-2,-2,-2">
            <Grid.Background>
                <SolidColorBrush Color="{Binding Value.RarityColor, Converter={StaticResource TEditColorToMediaColorConverter}}" Opacity="0.3"/>
            </Grid.Background>
            <DockPanel>
                <TextBlock DockPanel.Dock="Right" Text="{Binding Key, StringFormat='[{0}]'}" Margin="8,2,4,2" Foreground="Gray" />
                <TextBlock Text="{Binding Value.Name}" Margin="4,2,4,2" TextTrimming="CharacterEllipsis" />
            </DockPanel>
        </Grid>
    </DataTemplate>
    <!-- Rarity-tinted item template for ItemProperty objects directly (chest editor) -->
    <DataTemplate x:Key="RarityItemTemplate">
        <Grid Margin="-2,-2,-2,-2">
            <Grid.Background>
                <SolidColorBrush Color="{Binding RarityColor, Converter={StaticResource TEditColorToMediaColorConverter}}" Opacity="0.3"/>
            </Grid.Background>
            <DockPanel>
                <TextBlock DockPanel.Dock="Right" Text="{Binding Id, StringFormat='[{0}]'}" Margin="8,2,4,2" Foreground="Gray" />
                <TextBlock Text="{Binding Name}" Margin="4,2,4,2" TextTrimming="CharacterEllipsis" />
            </DockPanel>
        </Grid>
    </DataTemplate>

    <!-- Rarity-tinted item template with image preview for category dictionaries -->
    <DataTemplate x:Key="RarityDictItemWithPreviewTemplate">
        <Grid Margin="-2,-2,-2,-2">
            <Grid.Background>
                <SolidColorBrush Color="{Binding Value.RarityColor, Converter={StaticResource TEditColorToMediaColorConverter}}" Opacity="0.3"/>
            </Grid.Background>
            <DockPanel>
                <TextBlock DockPanel.Dock="Right" Text="{Binding Key, StringFormat='[{0}]'}" Margin="8,2,4,2" Foreground="Gray" VerticalAlignment="Center" />
                <Image DockPanel.Dock="Left" Source="{Binding Value.Id, Converter={StaticResource ItemIdToPreviewConverter}}"
                       Width="20" Height="20" Stretch="Uniform" Margin="2,0,2,0"
                       RenderOptions.BitmapScalingMode="NearestNeighbor" />
                <TextBlock Text="{Binding Value.Name}" Margin="2,2,4,2" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
            </DockPanel>
        </Grid>
    </DataTemplate>
    <!-- Rarity-tinted item template with image preview for ItemProperty objects -->
    <DataTemplate x:Key="RarityItemWithPreviewTemplate">
        <Grid Margin="-2,-2,-2,-2">
            <Grid.Background>
                <SolidColorBrush Color="{Binding RarityColor, Converter={StaticResource TEditColorToMediaColorConverter}}" Opacity="0.3"/>
            </Grid.Background>
            <DockPanel>
                <TextBlock DockPanel.Dock="Right" Text="{Binding Id, StringFormat='[{0}]'}" Margin="8,2,4,2" Foreground="Gray" VerticalAlignment="Center" />
                <Image DockPanel.Dock="Left" Source="{Binding Id, Converter={StaticResource ItemIdToPreviewConverter}}"
                       Width="20" Height="20" Stretch="Uniform" Margin="2,0,2,0"
                       RenderOptions.BitmapScalingMode="NearestNeighbor" />
                <TextBlock Text="{Binding Name}" Margin="2,2,4,2" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
            </DockPanel>
        </Grid>
    </DataTemplate>

    <!-- ImageOnly: shows only image in selection box, image+text in dropdown -->
    <DataTemplate x:Key="RarityDictItemImageOnlyTemplate">
        <Grid Margin="-2,-2,-2,-2">
            <Grid.Background>
                <SolidColorBrush Color="{Binding Value.RarityColor, Converter={StaticResource TEditColorToMediaColorConverter}}" Opacity="0.3"/>
            </Grid.Background>
            <DockPanel>
                <TextBlock x:Name="ItemId" DockPanel.Dock="Right" Text="{Binding Key, StringFormat='[{0}]'}" Margin="8,2,4,2" Foreground="Gray" VerticalAlignment="Center" />
                <Image DockPanel.Dock="Left" Source="{Binding Value.Id, Converter={StaticResource ItemIdToPreviewConverter}}"
                       Width="20" Height="20" Stretch="Uniform" Margin="2,0,2,0"
                       RenderOptions.BitmapScalingMode="NearestNeighbor" />
                <TextBlock x:Name="ItemText" Text="{Binding Value.Name}" Margin="2,2,4,2" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
            </DockPanel>
        </Grid>
        <DataTemplate.Triggers>
            <!-- Hide text when rendered in selection box (no ComboBoxItem ancestor) -->
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ComboBoxItem}, FallbackValue={x:Null}}" Value="{x:Null}">
                <Setter TargetName="ItemText" Property="Visibility" Value="Collapsed" />
                <Setter TargetName="ItemId" Property="Visibility" Value="Collapsed" />
            </DataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>
    <DataTemplate x:Key="RarityItemImageOnlyTemplate">
        <Grid Margin="-2,-2,-2,-2">
            <Grid.Background>
                <SolidColorBrush Color="{Binding RarityColor, Converter={StaticResource TEditColorToMediaColorConverter}}" Opacity="0.3"/>
            </Grid.Background>
            <DockPanel>
                <TextBlock x:Name="ItemId" DockPanel.Dock="Right" Text="{Binding Id, StringFormat='[{0}]'}" Margin="8,2,4,2" Foreground="Gray" VerticalAlignment="Center" />
                <Image DockPanel.Dock="Left" Source="{Binding Id, Converter={StaticResource ItemIdToPreviewConverter}}"
                       Width="20" Height="20" Stretch="Uniform" Margin="2,0,2,0"
                       RenderOptions.BitmapScalingMode="NearestNeighbor" />
                <TextBlock x:Name="ItemText" Text="{Binding Name}" Margin="2,2,4,2" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
            </DockPanel>
        </Grid>
        <DataTemplate.Triggers>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ComboBoxItem}, FallbackValue={x:Null}}" Value="{x:Null}">
                <Setter TargetName="ItemText" Property="Visibility" Value="Collapsed" />
                <Setter TargetName="ItemId" Property="Visibility" Value="Collapsed" />
            </DataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>

    <!-- ItemContainerStyles for rarity-colored items (background now in DataTemplate) -->
    <Style x:Key="RarityDictItemContainerStyle" TargetType="{x:Type ComboBoxItem}" BasedOn="{StaticResource RarityComboBoxItem}"/>
    <Style x:Key="RarityItemContainerStyle" TargetType="{x:Type ComboBoxItem}" BasedOn="{StaticResource RarityComboBoxItem}"/>
</ResourceDictionary>
