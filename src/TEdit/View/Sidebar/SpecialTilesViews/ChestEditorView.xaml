<UserControl x:Class="TEdit.View.Sidebar.SpecialTilesViews.ChestEditorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:p="clr-namespace:TEdit.Properties"
    xmlns:converters="clr-namespace:TEdit.Converters"
    xmlns:controls="clr-namespace:TEdit.View.Sidebar.Controls"
    mc:Ignorable="d"
    d:DesignWidth="340">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="SpecialTilesSharedResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:ItemIdToPreviewConverter x:Key="ItemIdToPreviewConverter" />
            <converters:ItemPreviewMultiConverter x:Key="ItemPreviewMultiConverter" />
            <DataTemplate x:Key="FastChestItem">
                <Grid HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="26" />
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="75" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="22" />
                        <ColumnDefinition Width="22" />
                        <ColumnDefinition Width="22" />
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0"
                           Width="24" Height="24" Stretch="Uniform"
                           RenderOptions.BitmapScalingMode="NearestNeighbor">
                        <Image.Source>
                            <MultiBinding Converter="{StaticResource ItemPreviewMultiConverter}">
                                <Binding Path="NetId" />
                                <Binding Path="IsModItem" />
                                <Binding Path="ModName" />
                                <Binding Path="ModItemName" />
                            </MultiBinding>
                        </Image.Source>
                    </Image>
                    <TextBlock Grid.Column="1" Foreground="White" Text="{Binding StackSize}" Margin="2" TextAlignment="Right" />
                    <TextBlock Grid.Column="2" Foreground="White" Text="{Binding PrefixName}" Margin="2" />
                    <TextBlock Grid.Column="3" Foreground="White" Text="{Binding Name}" Margin="2" TextTrimming="CharacterEllipsis" />
                    <Button Grid.Column="4" Style="{StaticResource CompactIconButton}" ToolTip="{x:Static p:Language.menu_edit_copy}"
                            Command="{Binding DataContext.CopyChestItemCommand, Mode=Default, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" CommandParameter="{Binding}">
                        <ui:SymbolIcon Symbol="Copy20" FontSize="14"/>
                    </Button>
                    <Button Grid.Column="5" Style="{StaticResource CompactIconButton}" ToolTip="{x:Static p:Language.menu_edit_paste}"
                            Command="{Binding DataContext.PasteChestItemCommand, Mode=Default, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" CommandParameter="{Binding SelectedItems, ElementName=ChestList}">
                        <ui:SymbolIcon Symbol="ClipboardPaste20" FontSize="14"/>
                    </Button>
                    <Button Grid.Column="6" Style="{StaticResource CompactIconButton}" ToolTip="{x:Static p:Language.chest_max_stack}"
                            Command="{Binding DataContext.ChestItemSetToMaxStackCommand, Mode=Default, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" CommandParameter="{Binding SelectedItems, ElementName=ChestList}">
                        <ui:SymbolIcon Symbol="ArrowMaximize20" FontSize="14"/>
                    </Button>
                </Grid>
            </DataTemplate>
            <DataTemplate x:Key="ChestItemTemplate">
                <controls:ItemEditorControl
                    ItemId="{Binding NetId, Mode=TwoWay}"
                    StackSize="{Binding StackSize, Mode=TwoWay}"
                    Prefix="{Binding Prefix, Mode=TwoWay}"
                    IsModItem="{Binding IsModItem, Mode=OneWay}"
                    ModItemDisplayName="{Binding Name, Mode=OneWay}"
                    ItemsSource="{Binding Source={StaticResource ItemsCollection}}"
                    ItemsSourceType="ItemPropertyList"
                    PrefixSource="{Binding Source={StaticResource PrefixCollection}}"
                    CopyCommand="{Binding DataContext.CopyChestItemCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                    CommandParameter="{Binding}"
                    PasteCommand="{Binding DataContext.PasteChestItemCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                    PasteCommandParameter="{Binding SelectedItems, ElementName=ChestList}"
                    MaxStackCommand="{Binding DataContext.ChestItemSetToMaxStackCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                    MaxStackCommandParameter="{Binding SelectedItems, ElementName=ChestList}" />
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
    </Grid.RowDefinitions>
      <Grid Grid.Row="0">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
            <TextBlock Text="{x:Static p:Language.specialtile_label_chestname}" Foreground="{DynamicResource TextBrush}" 
                    Grid.Column="0"
                       Margin="5,2"
                       FontWeight="Bold" VerticalAlignment="Center" />
            <TextBox Margin="2"  Height="20px" HorizontalAlignment="Stretch" MaxLines="1" Text="{Binding SelectedChest.Name}"
                    Grid.Column="1"
                     />
            <Button Margin="2,0,0,0" Style="{StaticResource CompactIconButton}"
                    Grid.Column="2"
                    ToolTip="{x:Static p:Language.menu_copyfirstitem}"
                    Command="{Binding CopyChestItemCommand}"
                    CommandParameter="{Binding SelectedChest.Items, Converter={StaticResource FirstOrNullConverter}}">
                <ui:SymbolIcon Symbol="Copy20" FontSize="14"/>
            </Button>
            <Button Margin="2,0,0,0" Style="{StaticResource CompactIconButton}"
                    Grid.Column="3"
                    ToolTip="{x:Static p:Language.menu_pasteall}"
                    Command="{Binding PasteChestItemCommand}"
                    CommandParameter="{Binding SelectedChest.Items}">
                <ui:SymbolIcon Symbol="ClipboardPaste20" FontSize="14"/>
            </Button>
            <Button Margin="2,0,0,0" Style="{StaticResource CompactIconButton}"
                    Grid.Column="4"
                    ToolTip="{x:Static p:Language.chest_max_stack}" 
                    Command="{Binding ChestItemSetToMaxStackCommand}"
                    CommandParameter="{Binding SelectedChest.Items}">
        <ui:SymbolIcon Symbol="ArrowUp16" FontSize="14"/>
            </Button>
          <Button Grid.Column="5" Style="{StaticResource CompactIconButton}" ToolTip="Clear All Items"
                    Command="{Binding ClearChestCommand}">
            <ui:SymbolIcon Symbol="Dismiss20" FontSize="14"/>
          </Button>
    </Grid>
        <StackPanel Orientation="Horizontal" Grid.Row="4">
            <TextBlock Text="{x:Static p:Language.specialtile_label_chestcontents}" Foreground="{DynamicResource TextBrush}" Margin="2" FontWeight="Bold" />
            
        </StackPanel>
    <StackPanel Grid.Row="2">
      <TextBlock Text="{x:Static p:Language.specialtile_label_editselecteditem}" Margin="2" Foreground="{DynamicResource TextBrush}" />
      <ContentControl ContentTemplate="{StaticResource ChestItemTemplate}" Content="{Binding ElementName=ChestList, Path=SelectedItem}" />
    </StackPanel>
    <UniformGrid Columns="2" Grid.Row="3">
      <ui:Button Margin="5" Content="{x:Static p:Language.specialtile_button_cancel}" Command="{Binding SaveChestCommand}"
                HorizontalAlignment="Stretch" Appearance="Danger"
                CommandParameter="{StaticResource False}" />
      <ui:Button Margin="5" Content="{x:Static p:Language.specialtile_button_save}" Command="{Binding SaveChestCommand}"
                HorizontalAlignment="Stretch" Appearance="Success"
                CommandParameter="{StaticResource True}" />
    </UniformGrid>
    <ListBox Grid.Row="5" Name="ChestList" Padding="5" Foreground="White" MinHeight="200"
          ItemsSource="{Binding SelectedChest.Items}"
          SelectionMode="Extended"
          ScrollViewer.CanContentScroll="True"
          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
          VirtualizingStackPanel.IsVirtualizing="True"
          HorizontalContentAlignment="Stretch"
          ItemTemplate="{StaticResource FastChestItem}">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

    </Grid>
</UserControl>
