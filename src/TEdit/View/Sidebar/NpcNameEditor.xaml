<UserControl x:Class="TEdit.View.NpcNameEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:viewModel="clr-namespace:TEdit.ViewModel"
             xmlns:converters="clr-namespace:TEdit.Converters"
             xmlns:p="clr-namespace:TEdit.Properties"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance Type=viewModel:WorldViewModel}">
    <UserControl.Resources>
        <converters:NpcIdToPreviewConverter x:Key="NpcIdToPreviewConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{x:Static p:Language.tool_npc_hint}"
                   Margin="4" Opacity="0.7" TextWrapping="Wrap" />
        <ListBox Grid.Row="1" MinHeight="100" ItemsSource="{Binding AllNpcsView}"
                 Grid.IsSharedSizeScope="True">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListBox.ItemContainerStyle>
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <i:InvokeCommandAction Command="{Binding NpcSelectCommand}"
                                           CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource AncestorType=ListBox}}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid HorizontalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="ButtonCol" />
                            <ColumnDefinition Width="Auto" SharedSizeGroup="ImageCol" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" SharedSizeGroup="LabelCol" />
                        </Grid.ColumnDefinitions>

                        <!-- Add button: visible when NPC is NOT on the map -->
                        <Button Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Content="+" Margin="2" Padding="4"
                                VerticalAlignment="Stretch"
                                Command="{Binding DataContext.NpcAddCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                CommandParameter="{Binding SpriteId}">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsOnMap}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Remove button: visible when NPC IS on the map -->
                        <Button Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Content="-" Margin="2" Padding="4"
                                VerticalAlignment="Stretch"
                                Command="{Binding DataContext.NpcRemoveCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                CommandParameter="{Binding SpriteId}">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsOnMap}" Value="True">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- NPC preview image: natural size, scale down only if too large -->
                        <Viewbox Grid.Row="0" Grid.RowSpan="2" Grid.Column="1"
                                 Width="32" Height="32"
                                 Stretch="Uniform"
                                 StretchDirection="DownOnly"
                                 Margin="2"
                                 VerticalAlignment="Center">
                            <Image Source="{Binding SpriteId, Converter={StaticResource NpcIdToPreviewConverter}}"
                                   Stretch="None"
                                   RenderOptions.BitmapScalingMode="NearestNeighbor">
                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Setter Property="Opacity" Value="0.35" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsOnMap}" Value="True">
                                                <Setter Property="Opacity" Value="1.0" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>
                        </Viewbox>

                        <!-- Row 0: Editable display name (only when on map) -->
                        <TextBox Grid.Row="0" Grid.Column="2"
                                 Text="{Binding WorldNpc.DisplayName, UpdateSourceTrigger=PropertyChanged}"
                                 MaxWidth="150" Margin="2,0"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Center"
                                 IsEnabled="{Binding IsOnMap}"
                                 Visibility="{Binding IsOnMap, Converter={StaticResource BoolToVis}}" />

                        <!-- Static name shown when NPC is not on map -->
                        <TextBlock Grid.Row="0" Grid.Column="2"
                                   Text="{Binding DefaultName}"
                                   Margin="4,0" Opacity="0.5"
                                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsOnMap}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- NPC type name, right-aligned -->
                        <TextBlock Grid.Row="0" Grid.Column="3"
                                   Text="{Binding DefaultName}"
                                   HorizontalAlignment="Right"
                                   Margin="8,0,4,0"
                                   VerticalAlignment="Center"
                                   Visibility="{Binding IsOnMap, Converter={StaticResource BoolToVis}}" />

                        <!-- Row 1: Variant/Shimmer/Party controls (only when on map) -->
                        <StackPanel Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2"
                                    Orientation="Horizontal" Margin="2,1,2,1"
                                    Visibility="{Binding IsOnMap, Converter={StaticResource BoolToVis}}">

                            <!-- Variant selector -->
                            <ComboBox ItemsSource="{Binding AvailableVariants}"
                                      SelectedIndex="{Binding VariantIndex}"
                                      MinWidth="80" Margin="0,0,4,0"
                                      VerticalAlignment="Center">
                                <ComboBox.Style>
                                    <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasVariants}" Value="True">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ComboBox.Style>
                            </ComboBox>

                            <!-- Shimmer toggle -->
                            <CheckBox Content="Shimmered"
                                      IsChecked="{Binding IsShimmered}"
                                      VerticalAlignment="Center" Margin="0,0,4,0">
                                <CheckBox.Style>
                                    <Style TargetType="CheckBox" BasedOn="{StaticResource {x:Type CheckBox}}">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CanShimmer}" Value="True">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </CheckBox.Style>
                            </CheckBox>

                            <!-- Party toggle -->
                            <CheckBox Content="Partying"
                                      IsChecked="{Binding IsPartying}"
                                      VerticalAlignment="Center" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
