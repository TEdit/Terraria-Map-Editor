<UserControl x:Class="TEdit.View.NpcNameEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModel="clr-namespace:TEdit.ViewModel"
             xmlns:Terraria="clr-namespace:TEdit.Terraria;assembly=TEdit.Terraria"
             xmlns:p="clr-namespace:TEdit.Properties"
             xmlns:converters="clr-namespace:TEdit.Converters"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance Type=viewModel:WorldViewModel}">
    <UserControl.Resources>
        <converters:NpcIdToPreviewConverter x:Key="NpcIdToPreviewConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <ComboBox ItemsSource="{Binding Source={x:Static Terraria:WorldConfiguration.NpcNames}, Mode=OneTime}"
                          SelectedValuePath="Key"
                          x:Name="addNpcComboBox"
                          MinWidth="180">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding Key, Converter={StaticResource NpcIdToPreviewConverter}}"
                                       MaxWidth="32" MaxHeight="32"
                                       Stretch="Uniform"
                                       RenderOptions.BitmapScalingMode="NearestNeighbor"
                                       Margin="0,0,4,0"
                                       VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Value}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Button Command="{Binding NpcAddCommand}" CommandParameter="{Binding Path=SelectedValue, ElementName=addNpcComboBox}" Content="{x:Static p:Language.tool_npc_add}"></Button>
            </StackPanel>
        </Grid>
        <ListBox Grid.Row="1" MinHeight="100" ItemsSource="{Binding CurrentWorld.NPCs}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Content="-" Margin="2" Command="{Binding DataContext.NpcRemoveCommand, Mode=Default, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" VerticalAlignment="Stretch" CommandParameter="{Binding}" Padding="4" />
                        <Image Grid.Column="1"
                               Source="{Binding SpriteId, Converter={StaticResource NpcIdToPreviewConverter}}"
                               MaxWidth="32" MaxHeight="32"
                               Stretch="Uniform"
                               RenderOptions.BitmapScalingMode="NearestNeighbor"
                               Margin="2"
                               VerticalAlignment="Center"/>
                        <TextBox Grid.Column="2" Text="{Binding DisplayName}" MinWidth="150" Margin="2,0" />
                        <TextBlock Grid.Column="3" Text="{Binding Name}" HorizontalAlignment="Center" Margin="2" VerticalAlignment="Center" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
