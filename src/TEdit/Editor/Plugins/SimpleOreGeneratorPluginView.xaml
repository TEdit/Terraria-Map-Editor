<Window x:Class="TEdit.Editor.Plugins.SimpleOreGeneratorPluginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:view="clr-namespace:TEdit.View"
        SizeToContent="WidthAndHeight"
        Title="简易矿石生成器"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Icon="/TEdit;component/Images/tedit.ico"
        Height="640" Width="279">

    <Border Background="{StaticResource ControlBackgroundBrush}" Padding="10">
        <StackPanel>

            <!-- Tier 1 Ores -->
            <GroupBox BorderBrush="White" Margin="0,0,0,0" Width="260" Height="40">
                <GroupBox.Header>
                    <TextBlock Text="梯队 1" Foreground="White"/>
                </GroupBox.Header>
                <Canvas>
                    <RadioButton x:Name="Tier1BothRadioButton" Content="两者" HorizontalAlignment="Left" VerticalAlignment="Center" TabIndex="1" IsChecked="False"/>
                    <RadioButton x:Name="CopperRadioButton" Content="铜" HorizontalAlignment="Left" Canvas.Left="60" VerticalAlignment="Center" TabIndex="2" IsChecked="False"/>
                    <RadioButton x:Name="TinRadioButton" Content="锡" HorizontalAlignment="Left" Canvas.Left="120" VerticalAlignment="Center" TabIndex="3" IsChecked="False"/>
                    <RadioButton x:Name="Tier1NARadioButton" Content="无" HorizontalAlignment="Left" Canvas.Left="180" VerticalAlignment="Center" TabIndex="4" IsChecked="False"/>
                </Canvas>
            </GroupBox>

            <!-- Tier 2 Ores -->
            <GroupBox BorderBrush="White" Margin="0,0,0,0" Width="260" Height="40">
                <GroupBox.Header>
                    <TextBlock Text="梯队 2" Foreground="White"/>
                </GroupBox.Header>
                <Canvas>
                    <RadioButton x:Name="Tier2BothRadioButton" Content="两者" HorizontalAlignment="Left" VerticalAlignment="Center" TabIndex="5" IsChecked="False"/>
                    <RadioButton x:Name="IronRadioButton" Content="铁" HorizontalAlignment="Left" Canvas.Left="60" VerticalAlignment="Center" TabIndex="6" IsChecked="False"/>
                    <RadioButton x:Name="LeadRadioButton" Content="铅" HorizontalAlignment="Left" Canvas.Left="120" VerticalAlignment="Center" TabIndex="7" IsChecked="False"/>
                    <RadioButton x:Name="Tier2NARadioButton" Content="无" HorizontalAlignment="Left" Canvas.Left="180" VerticalAlignment="Center" TabIndex="8" IsChecked="False"/>
                </Canvas>
            </GroupBox>

            <!-- Tier 3 Ores -->
            <GroupBox BorderBrush="White" Margin="0,0,0,0" Width="260" Height="40">
                <GroupBox.Header>
                    <TextBlock Text="梯队 3" Foreground="White"/>
                </GroupBox.Header>
                <Canvas>
                    <RadioButton x:Name="Tier3BothRadioButton" Content="两者" HorizontalAlignment="Left" VerticalAlignment="Center" TabIndex="9" IsChecked="False"/>
                    <RadioButton x:Name="SilverRadioButton" Content="银" HorizontalAlignment="Left" Canvas.Left="60" VerticalAlignment="Center" TabIndex="10" IsChecked="False"/>
                    <RadioButton x:Name="TungstenRadioButton" Content="钨" HorizontalAlignment="Left" Canvas.Left="120" VerticalAlignment="Center" TabIndex="11" IsChecked="False"/>
                    <RadioButton x:Name="Tier3NARadioButton" Content="无" HorizontalAlignment="Left" Canvas.Left="180" VerticalAlignment="Center" TabIndex="12" IsChecked="False"/>
                </Canvas>
            </GroupBox>

            <!-- Tier 4 Ores -->
            <GroupBox BorderBrush="White" Margin="0,0,0,0" Width="260" Height="40">
                <GroupBox.Header>
                    <TextBlock Text="梯队 4" Foreground="White"/>
                </GroupBox.Header>
                <Canvas>
                    <RadioButton x:Name="Tier4BothRadioButton" Content="两者" HorizontalAlignment="Left" VerticalAlignment="Center" TabIndex="13" IsChecked="False"/>
                    <RadioButton x:Name="GoldRadioButton" Content="金" HorizontalAlignment="Left" Canvas.Left="60" VerticalAlignment="Center" TabIndex="14" IsChecked="False"/>
                    <RadioButton x:Name="PlatinumRadioButton" Content="铂" HorizontalAlignment="Left" Canvas.Left="120" VerticalAlignment="Center" TabIndex="15" IsChecked="False"/>
                    <RadioButton x:Name="Tier4NARadioButton" Content="无" HorizontalAlignment="Left" Canvas.Left="180" VerticalAlignment="Center" TabIndex="16" IsChecked="False"/>
                </Canvas>
            </GroupBox>

            <!-- Tier 5 Ores -->
            <GroupBox BorderBrush="White" Margin="0,0,0,0" Width="260" Height="40">
                <GroupBox.Header>
                    <TextBlock Text="梯队 5" Foreground="White"/>
                </GroupBox.Header>
                <Canvas>
          <CheckBox x:Name="MeteoriteCheckbox" Content="陨" HorizontalAlignment="Left" VerticalAlignment="Center" TabIndex="17" IsChecked="False"/>
                </Canvas>
            </GroupBox>

            <!-- Tier 6 Ores -->
            <GroupBox BorderBrush="White" Margin="0,0,0,0" Width="260" Height="40">
                <GroupBox.Header>
                    <TextBlock Text="梯队 6" Foreground="White"/>
                </GroupBox.Header>
                <Canvas>
                    <RadioButton x:Name="Tier6BothRadioButton" Content="两者" HorizontalAlignment="Left" VerticalAlignment="Center" TabIndex="18" IsChecked="False"/>
                    <RadioButton x:Name="DemoniteRadioButton" Content="魔矿" HorizontalAlignment="Left" Canvas.Left="60" VerticalAlignment="Center" TabIndex="19" IsChecked="False"/>
                    <RadioButton x:Name="CrimtaneRadioButton" Content="猩红" HorizontalAlignment="Left" Canvas.Left="120" VerticalAlignment="Center" TabIndex="20" IsChecked="False"/>
                    <RadioButton x:Name="Tier6NARadioButton" Content="无" HorizontalAlignment="Left" Canvas.Left="180" VerticalAlignment="Center" TabIndex="21" IsChecked="False"/>
                </Canvas>
            </GroupBox>

            <!-- Tier 7 Ores -->
            <GroupBox BorderBrush="White" Margin="0,0,0,0" Width="260" Height="40">
                <GroupBox.Header>
                    <TextBlock Text="梯队 7" Foreground="White"/>
                </GroupBox.Header>
                <Canvas>
          <CheckBox x:Name="ObsidianCheckbox" Content="黑曜石" HorizontalAlignment="Left" VerticalAlignment="Center" TabIndex="22" IsChecked="False"/>
                </Canvas>
            </GroupBox>

            <!-- Tier 8 Ores -->
            <GroupBox BorderBrush="White" Margin="0,0,0,0" Width="260" Height="40">
                <GroupBox.Header>
                    <TextBlock Text="梯队 8" Foreground="White"/>
                </GroupBox.Header>
                <Canvas>
                    <CheckBox x:Name="HellstoneCheckbox" Content="狱石" HorizontalAlignment="Left" VerticalAlignment="Center" TabIndex="23" IsChecked="False"/>
                </Canvas>
            </GroupBox>

            <!-- Tier 9 Ores -->
            <GroupBox BorderBrush="White" Margin="0,0,0,0" Width="260" Height="40">
                <GroupBox.Header>
                    <TextBlock Text="梯队 9" Foreground="White"/>
                </GroupBox.Header>
                <Canvas>
                    <RadioButton x:Name="Tier9BothRadioButton" Content="两者" HorizontalAlignment="Left" VerticalAlignment="Center" TabIndex="24" IsChecked="False"/>
                    <RadioButton x:Name="CobaltRadioButton" Content="钴" HorizontalAlignment="Left" Canvas.Left="60" VerticalAlignment="Center" TabIndex="25" IsChecked="False"/>
                    <RadioButton x:Name="PalladiumRadioButton" Content="钯" HorizontalAlignment="Left" Canvas.Left="120" VerticalAlignment="Center" TabIndex="26" IsChecked="False"/>
                    <RadioButton x:Name="Tier9NARadioButton" Content="无" HorizontalAlignment="Left" Canvas.Left="180" VerticalAlignment="Center" TabIndex="27" IsChecked="False"/>
                </Canvas>
            </GroupBox>

            <!-- Tier 10 Ores -->
            <GroupBox BorderBrush="White" Margin="0,0,0,0" Width="260" Height="40">
                <GroupBox.Header>
                    <TextBlock Text="梯队 10" Foreground="White"/>
                </GroupBox.Header>
                <Canvas>
                    <RadioButton x:Name="Tier10BothRadioButton" Content="两者" HorizontalAlignment="Left" VerticalAlignment="Center" TabIndex="28" IsChecked="False"/>
                    <RadioButton x:Name="MythrilRadioButton" Content="秘银" HorizontalAlignment="Left" Canvas.Left="60" VerticalAlignment="Center" TabIndex="29" IsChecked="False"/>
                    <RadioButton x:Name="OrichalcumRadioButton" Content="山铜" HorizontalAlignment="Left" Canvas.Left="120" VerticalAlignment="Center" TabIndex="30" IsChecked="False"/>
                    <RadioButton x:Name="Tier10NARadioButton" Content="无" HorizontalAlignment="Left" Canvas.Left="180" VerticalAlignment="Center" TabIndex="31" IsChecked="False"/>
                </Canvas>
            </GroupBox>

            <!-- Tier 11 Ores -->
            <GroupBox BorderBrush="White" Margin="0,0,0,0" Width="260" Height="40">
                <GroupBox.Header>
                    <TextBlock Text="梯队 11" Foreground="White"/>
                </GroupBox.Header>
                <Canvas>
                    <RadioButton x:Name="Tier11BothRadioButton" Content="两者" HorizontalAlignment="Left" VerticalAlignment="Center" TabIndex="32" IsChecked="False"/>
                    <RadioButton x:Name="AdamantiteRadioButton" Content="精金" HorizontalAlignment="Left" Canvas.Left="60" VerticalAlignment="Center" TabIndex="33" IsChecked="False"/>
                    <RadioButton x:Name="TitaniumRadioButton" Content="钛金" HorizontalAlignment="Left" Canvas.Left="120" VerticalAlignment="Center" TabIndex="34" IsChecked="False"/>
                    <RadioButton x:Name="Tier11NARadioButton" Content="无" HorizontalAlignment="Left" Canvas.Left="180" VerticalAlignment="Center" TabIndex="35" IsChecked="False"/>
                </Canvas>
            </GroupBox>

            <!-- Tier 12 Ores -->
            <GroupBox BorderBrush="White" Margin="0,0,0,0" Width="260" Height="40">
                <GroupBox.Header>
                    <TextBlock Text="梯队 12" Foreground="White"/>
                </GroupBox.Header>
                <Canvas>
                    <CheckBox x:Name="ChlorophyteCheckbox" Content="叶绿矿" HorizontalAlignment="Left" VerticalAlignment="Center" TabIndex="36" IsChecked="False"/>
                </Canvas>
            </GroupBox>

            <!-- Tier 13 Ores -->

            <GroupBox BorderBrush="White" Margin="0,0,0,0" Width="260" Height="40">
                <GroupBox.Header>
                    <TextBlock Text="梯队 13" Foreground="White"/>
                </GroupBox.Header>
                <Canvas>
                    <CheckBox x:Name="LuminiteCheckbox" Content="夜明矿" HorizontalAlignment="Left" VerticalAlignment="Center" TabIndex="37" IsChecked="False"/>
                </Canvas>
            </GroupBox>

            <Grid Height="3"/>
            
            <!-- Generation Options -->
            <CheckBox x:Name="IncludeAshCheckBox" Content="灰烬块转换" HorizontalAlignment="Center" VerticalAlignment="Bottom" IsChecked="False" TabIndex="39"/>
            <Grid Height="3"/>
            <CheckBox x:Name="OnlyUseSelectionCheckBox" Content="仅使用选定部分" HorizontalAlignment="Center" VerticalAlignment="Top" TabIndex="38"/>
            <Grid Height="3"/>
            <CheckBox x:Name="UndoCheckBox" Content="允许撤销" HorizontalAlignment="Center" VerticalAlignment="Bottom" IsChecked="False" TabIndex="39"/>

            <Grid Height="3"/>

            <!-- Cancel or OK -->
            <Grid Width="264">
                <Button Content="确信" HorizontalAlignment="Left" VerticalAlignment="Center" Click="CancelButtonClick" Height="22" Width="75" TabIndex="40"/>
                <Button Content="生成" HorizontalAlignment="Right" VerticalAlignment="Center" Click="OkButtonClick" Height="22" Width="75" TabIndex="41"/>
            </Grid>

        </StackPanel>
    </Border>
</Window>
